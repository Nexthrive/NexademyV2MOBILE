    shadowOpacity: 0.25,
    shadowRadius: 8,
    paddingHorizontal: moderateScale(46),
    alignItems: "center",
  },
  welcomeText: {
    fontFamily: "Montserrat",
    color: "#1E1E1E",
    fontSize: moderateScale(30),
    letterSpacing: moderateScale(.5),
    fontWeight: "bold",
    textAlign: "center",
  },
  detailsText: {
    fontFamily: "Poppins",
    color: "#808080",
    fontSize: moderateScale(12),
    textAlign: "center",
  },
  inputContainer: {
    width: "100%",
    marginTop: verticalScale(16),
    gap: verticalScale(16),
  },
  inputUnderline: {
    width: "100%",
    borderBottomWidth: 1,
    borderColor: "#1E1E1E",
    fontSize: moderateScale(14),
    paddingVertical: verticalScale(8),
  },
  passwordContainer: {
    width: "100%",
    position: "relative",
  },
  eyeIconContainer: {
